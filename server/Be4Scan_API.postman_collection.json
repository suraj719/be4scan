{
	"info": {
		"_postman_id": "be4scan-api-collection",
		"name": "Be4Scan API",
		"description": "API collection for Be4Scan VAPT Platform",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"    console.log(\"Token set automatically from Register response\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"name\": \"Test User\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"register"
							]
						},
						"description": "Register a new user and automatically set the token"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"    console.log(\"Token set automatically from Login response\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Login and automatically set the token"
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/me",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"me"
							]
						},
						"description": "Get details of the currently authenticated user"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints"
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check if the API server is running"
			},
			"response": []
		},
		{
			"name": "Scans",
			"item": [
				{
					"name": "Create Scan",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Example Website Scan\",\n  \"type\": \"nuclei\",\n  \"target\": \"https://example.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/scans",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"scans"
							]
						},
						"description": "Create a new scan. Returns scan ID that you can use to check status and get findings."
					},
					"response": []
				},
				{
					"name": "List All Scans",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/scans",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"scans"
							]
						},
						"description": "Get a list of all scans"
					},
					"response": []
				},
				{
					"name": "Get Scan by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/scans/{{scanId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"scans",
								"{{scanId}}"
							]
						},
						"description": "Get details of a specific scan by ID. Use this to poll for status updates."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing scans"
		},
		{
			"name": "Findings",
			"item": [
				{
					"name": "Get Findings by Scan ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/findings?scanId={{scanId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"findings"
							],
							"query": [
								{
									"key": "scanId",
									"value": "{{scanId}}",
									"description": "The scan ID to get findings for"
								}
							]
						},
						"description": "Get all findings for a completed scan"
					},
					"response": []
				}
			],
			"description": "Endpoints for retrieving scan findings"
		},
		{
			"name": "Artifacts",
			"item": [
				{
					"name": "Download Nuclei Artifact",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/artifacts/{{scanId}}/nuclei.json",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"artifacts",
								"{{scanId}}",
								"nuclei.json"
							]
						},
						"description": "Download the raw Nuclei JSON output for a completed scan"
					},
					"response": []
				}
			],
			"description": "Endpoints for downloading scan artifacts"
		}
	],
